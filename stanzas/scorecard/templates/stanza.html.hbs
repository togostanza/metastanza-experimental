<div class="chart-wrapper">
  {{#each scorecards as |scorecard|}}
    <svg id="scorecardSvg" class="scorecard-svg">
      <text id="text" x="50%" y="50%" text-anchor="middle">
        <tspan id="key" x="50%" y="16px" font-size="16px">
          {{scorecard.key}}
        </tspan>
        <tspan id="value" x="50%" y="48px" font-size="32px">
          {{scorecard.value}}
        </tspan>
      </text>
    </svg>
  {{/each}}
</div>